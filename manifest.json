{
  "author": "Emanuele Triuzzi",
  "description": "Adds keyboard shortcuts for duplicating tabs, pinning tabs, collapsing translation files, and converting relative time to absolute time on GitHub. No internet access needed.",
  "name": "Tab Shortcuts",
  "version": "1.3",

  "background": { "service_worker": "background.js" },
  "manifest_version": 3,

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "commands"
  ],
  "host_permissions": [
    "*://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*"
      ],
      "js": [
        "github-file-manager.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "duplicateTab": {
      "suggested_key": {
        "mac": "MacCtrl+Shift+D",
        "default": "Ctrl+Shift+D"
      },
      "description": "Duplicate active tab"
    },
    "pinTab": {
      "suggested_key": {
        "mac": "MacCtrl+Shift+P",
        "default": "Ctrl+Shift+P"
      },
      "description": "Pin active tab"
    },
    "collapseTranslations": {
      "suggested_key": {
        "mac": "MacCtrl+Shift+T",
        "default": "Ctrl+Shift+T"
      },
      "description": "Collapse translation files on GitHub"
    },
    "convertRelativeTime": {
      "suggested_key": {
        "mac": "MacCtrl+Shift+O",
        "default": "Ctrl+Shift+O"
      },
      "description": "Convert relative time to absolute time on GitHub"
    }
  },

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
